  
  <div class="container">
    <div class="row">
      <div class="col-md-12">
          <h1 id="login">Login</h1>
        <div class="form">

          <% if !flash[:notice].blank? %>
            <!-- blank => nil? || empty?-->
            <div class="notice_box">
              <%= raw(flash[:notice]) %>
            </div>
          <% end %>

          <%= form_tag({:action => "attempt_login"}) do |f| %>
            <div class="form-group">
              <label for="name">Player Name</label>
              <%= text_field_tag :name, nil, placeholder: "Enter name here", class: "form-control" %>
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <%= password_field_tag :password, nil, placeholder: "Password", class: "form-control" %>
            </div><br>

             <%= submit_tag "Login", class: "btn btn-default" %> <br><br> 
            <p class="help-block">Don't have an account? <%= link_to "Register here.", :controller => :players, :action => :new %></p>
          <% end %>
        </div>
      </div>
    </div>
  </div>